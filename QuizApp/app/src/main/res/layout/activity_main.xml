                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginEnd="70dp"
                        android:layout_marginBottom="0dp"
                        android:text="Sinema"
                        android:textColor="@color/text_color"
                        android:textSize="24sp"
